{
  "OpenAIOptions": {
    "BaseUrl": "https://api.openai.com/v1/"
  },
  "MarkdownStorageOptions": {
    "RootPath": "AIStormSessions"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "AIStorm.Core.Services": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information"
      },
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": false,
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": false,
        "ColorBehavior": "Enabled"
      }
    }
  }
}
